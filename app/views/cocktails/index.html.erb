<div class="banner" style="background-image: url(https://static.vinepair.com/wp-content/uploads/2016/11/cocktailsubs-internal-header.jpg);">
  <div class="container d-flex flex-column bd-highlight mb-3">
    <h1>Cocktails</h1>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-light"%>
  </div>
</div>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
    </li>
  <% end %>
</ul>


