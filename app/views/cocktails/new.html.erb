<h1>New Cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :photo, as: :file %>
<% end %>

<% if @cocktail.photo.attached? %>
 <%= cl_image_tag(@cocktail.photo.key, height: 300, width: 400, crop: :fill) %>
<% end %>

<%= link_to 'Back to homepage', cocktails_path %>
